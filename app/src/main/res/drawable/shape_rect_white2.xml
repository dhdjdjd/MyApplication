<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 指定了形状内部的填充颜色 -->
    <solid android:color="#86FFFFFF" />

    <!-- 指定了形状轮廓的粗细与颜色 -->
    <stroke
        android:width="0.1dp"
        android:color="#FFFFFF" />

    <!-- 指定了形状四个圆角的半径 -->
    <corners android:radius="10dp" />

</shape>