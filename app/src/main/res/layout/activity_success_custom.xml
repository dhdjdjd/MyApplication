<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessCustomActivity"
    android:background="@drawable/lcbgc1">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tl_scb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextAppearance="@style/TitleText"
        app:titleTextColor="@color/black"
        android:background="#F3F3F3"
        />

    <View
        android:id="@+id/ve_scb1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape_rect_white2"
        android:translationZ="25dp"
        android:outlineAmbientShadowColor="#B309101D"
        />

    <TextView
        android:id="@+id/tv_scb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ve_scb1"
        android:layout_alignTop="@+id/ve_scb1"
        android:layout_alignEnd="@+id/ve_scb1"
        android:layout_alignBottom="@+id/ve_scb1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        android:text="您的分数是:"
        android:translationZ="25dp"
        android:textSize="22dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_scb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_scb1"
        android:layout_alignTop="@+id/tv_scb1"
        android:layout_alignEnd="@+id/tv_scb1"
        android:layout_alignBottom="@+id/tv_scb1"
        android:layout_marginStart="140dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="0dp"
        android:text="94"
        android:translationZ="30dp"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textColor="@color/gbule"
        android:textStyle="bold"
        android:shadowRadius="3.0"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowColor="#B309101D"
        />

    <TextView
        android:id="@+id/tv_scb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_scb1"
        android:layout_alignTop="@+id/tv_scb1"
        android:layout_alignEnd="@+id/tv_scb1"
        android:layout_alignBottom="@+id/tv_scb1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-60dp"
        android:text="您享有消费贷的额度"
        android:translationZ="25dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <View
        android:id="@+id/ve_scb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ve_scb1"
        android:layout_alignTop="@+id/ve_scb1"
        android:layout_alignEnd="@+id/ve_scb1"
        android:layout_alignBottom="@+id/ve_scb1"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="-20dp"
        android:layout_marginBottom="-420dp"
        android:background="@drawable/shape_rect_white2"
        android:translationZ="25dp"
        android:outlineAmbientShadowColor="#B309101D"
        />

    <TextView
        android:id="@+id/tv_scb4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ve_scb2"
        android:layout_alignTop="@+id/ve_scb2"
        android:layout_alignEnd="@+id/ve_scb2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text="您可以在消费时使用额度了！"
        android:translationZ="25dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />


    <ImageView
        android:id="@+id/img_scb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sspic2"
        android:layout_alignStart="@+id/ve_scb2"
        android:layout_alignTop="@+id/tv_scb4"
        android:layout_alignEnd="@+id/ve_scb2"
        android:layout_alignBottom="@+id/tv_scb4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-200dp"
        android:translationZ="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_scb"
        android:layout_alignStart="@+id/tv_scb4"
        android:layout_alignEnd="@+id/tv_scb4"
        android:layout_alignBottom="@+id/img_scb"
        android:layout_marginStart="70dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="-65dp"
        android:translationZ="25dp"
        android:stateListAnimator="@null"
        android:text="返 回 主 页"
        android:textSize="16dp"
        android:background="@drawable/butss_bc3"
        android:textColor="@color/black"
        />


</RelativeLayout>