<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="800dp"
    android:background="@color/white"
    tools:context=".activity_fradash">

    <com.example.myapplication.Util.MyViewPager
        android:id="@+id/content_pager"
        android:layout_width="360dp"
        android:layout_height="197dp"
        tools:ignore="MissingClass,MissingConstraints"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:id="@+id/points_container"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_marginTop="580px">

    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/points_container"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/daikuan"
            />
    </ScrollView>



</RelativeLayout>