<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/t1head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextAppearance="@style/TitleText"
        app:subtitleTextAppearance="@style/SubTitleText"
        />

    <View
        android:id="@+id/v_besf"
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:layout_marginLeft="25px"
        android:layout_marginTop="200px"
        android:layout_marginRight="25px" />

    <Button
        android:id="@+id/but_bow"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_alignStart="@+id/v_besf"
        android:layout_alignTop="@+id/v_besf"
        android:layout_alignEnd="@+id/v_besf"
        android:layout_alignBottom="@+id/v_besf"
        android:layout_marginStart="210dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="90dp"
        android:background="@color/white"
        android:text="我要借钱" />

    <TextView
        android:id="@+id/tv_h1"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/v_besf"
        android:layout_alignTop="@+id/v_besf"
        android:layout_alignEnd="@+id/v_besf"
        android:layout_alignBottom="@+id/v_besf"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="122dp"
        android:background="@color/gbule"
        android:text="最高可借额度（元）"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_h2"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/v_besf"
        android:layout_alignTop="@+id/v_besf"
        android:layout_alignEnd="@+id/v_besf"
        android:layout_alignBottom="@+id/v_besf"
        android:layout_marginStart="27dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="83dp"
        android:background="@color/gbule"
        android:text="200,000.00"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_h3"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/v_besf"
        android:layout_alignTop="@+id/v_besf"
        android:layout_alignEnd="@+id/v_besf"
        android:layout_alignBottom="@+id/v_besf"
        android:layout_marginStart="27dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="30dp"
        android:background="@color/gbule"
        android:text="1千元借12个月，日费用1毛2起，年化利率（单利）7.2%~24%"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_Hh2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/v_besf"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="370dp"
        android:layout_marginStart="25px"
        android:layout_marginEnd="25px"
        android:text="      使用攻略"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/but_ss1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_Hh2"
        android:layout_alignBottom="@+id/tv_Hh2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40px"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="540px"
        android:layout_marginBottom="-60dp"
        android:text="申请条件          "
        android:background="@drawable/butss_bc"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/but_ss2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_Hh2"
        android:layout_alignBottom="@+id/tv_Hh2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="540px"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40px"
