        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/but_ss1"
        android:layout_alignBottom="@+id/but_ss1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="540px"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="-70dp"
        android:text="AI答疑          "
        android:background="@drawable/butss_bc"
        android:textAlignment="textEnd"/>

    <TextView
        android:id="@+id/tv_Hh3"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_besf"
        android:layout_marginStart="25px"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="25px"
        android:text="      贷中风险"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/but_ss5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/but_ss3"
        android:layout_alignBottom="@+id/but_ss3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40px"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="540px"
        android:layout_marginBottom="-140dp"
        android:background="@drawable/butss_bc2"
        android:text="          收集信息"
        android:textAlignment="textStart"/>

    <Button
        android:id="@+id/but_ss6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/but_ss3"
        android:layout_alignBottom="@+id/but_ss3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="540px"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="-140dp"
        android:text="          安全要求"
        android:background="@drawable/butss_bc2"
        android:textAlignment="textStart"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/but_ss1"
        android:layout_alignTop="@+id/but_ss1"
        android:layout_alignEnd="@+id/but_ss1"
        android:layout_alignBottom="@+id/but_ss1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
