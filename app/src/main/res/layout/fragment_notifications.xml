<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="800dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ui.notifications.NotificationsFragment">
<RelativeLayout
    android:id="@+id/re1"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/color1"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/t1head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextAppearance="@style/TitleText"
        app:subtitleTextAppearance="@style/SubTitleText"
        />

    <com.example.myapplication.Views.RoundImageViewByXfermode
        android:id="@+id/avatar_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/t1head"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_x="1dp"
        android:layout_y="1dp"
        android:src="@drawable/headpicture" />
    <TextView
        android:id="@+id/fixedname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您好尊敬的"
        android:textSize="22sp"
        android:layout_toRightOf="@+id/avatar_image"
        android:layout_alignTop="@+id/avatar_image"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/achievement"
        android:layout_width="85dp"
        android:layout_alignLeft="@+id/fixedname"
        android:layout_height="30dp"
        android:textSize="12sp"
        android:text="  查看成就>>>"
        android:gravity="center_vertical"
        android:layout_below="@+id/fixedname"
        android:background="@drawable/circular_background"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/prevent"
        android:layout_width="95dp"
        android:layout_toRightOf="@+id/achievement"
        android:layout_height="30dp"
        android:textSize="12sp"
        android:text="  消费者权益>>>"
        android:gravity="center_vertical"
        android:layout_below="@+id/fixedname"
        android:background="@drawable/circular_background"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/changedname"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_toRightOf="@+id/fixedname"
        android:layout_alignTop="@+id/avatar_image"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        />
    <ImageView
        android:id="@+id/avtar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@+id/changedname"
        android:layout_alignTop="@+id/changedname"
        android:background="@drawable/_7_____x16"/>

    <View
        android:id="@+id/suqre"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_marginTop="180dp"
        android:background="#005A80"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户总览"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/suqre"
        android:layout_alignTop="@+id/suqre"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>



</RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FFFFFF"
        android:layout_below="@+id/re1"
        android:layout_marginLeft="30dp">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"

        >
            <TextView
                android:id="@+id/youhuiquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/lingqianbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="零钱包"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="95dp"/>

            <TextView
                android:id="@+id/jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="175dp"/>

            <TextView
                android:id="@+id/shoucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="235dp"/>
            <TextView
                android:id="@+id/nofquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_above="@+id/youhuiquan"
                android:layout_alignLeft="@+id/youhuiquan"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/nofbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_above="@+id/lingqianbao"
                android:layout_alignLeft="@+id/lingqianbao"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/noffen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_above="@+id/jifen"
                android:layout_alignLeft="@+id/jifen"
                android:layout_marginLeft="13dp"/>
            <TextView
                android:id="@+id/nofshoucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_above="@+id/shoucang"
                android:layout_alignLeft="@+id/shoucang"
                android:layout_marginLeft="13dp"/>


        </RelativeLayout>
</androidx.cardview.widget.CardView>

    <View
        android:id="@+id/suqre1"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_below="@+id/card1"
        android:layout_marginTop="20dp"
        android:background="#005A80"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="借贷记录"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/suqre1"
        android:textStyle="bold"
        android:layout_alignTop="@+id/suqre1"
        android:layout_marginLeft="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="300dp"
        android:layout_height="130dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_below="@+id/suqre1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">
        <RelativeLayout
            android:id="@+id/re2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="top"

            >

            <TextView
                android:id="@+id/edu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂未获得额度，无账单"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"

                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/edu"
                android:text="申请额度"
                android:background="@drawable/layout_back"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>
        </RelativeLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:background="#D6D2D2" />

        <RelativeLayout
            android:id="@+id/jiedai"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"

            >
            <ImageView
                android:id="@+id/pc1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/record"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/pc2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/reback"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/pc3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/order"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借还记录"
                android:layout_below="@+id/pc1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="32dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动还款"
                android:layout_below="@+id/pc1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="122dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商城订单"
                android:layout_below="@+id/pc1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="212dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/suqre2"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_below="@+id/card2"
        android:layout_marginTop="20dp"
        android:background="#005A80"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多服务"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/suqre2"
        android:layout_alignTop="@+id/suqre2"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_below="@+id/suqre2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"

            >

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/adress"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/pic2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/setting"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/pic3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/message"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:id="@+id/pic4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/myself"
                android:scaleType="matrix"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址"
                android:layout_below="@+id/pic1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_below="@+id/pic1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="101dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息查看"
                android:layout_below="@+id/pic1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="158dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:layout_below="@+id/pic1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="229dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>